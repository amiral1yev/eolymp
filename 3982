n = int(input())  # Чтение количества вершин
matrix = [[0] * n for _ in range(n)]  # Инициализация матрицы смежности

# Чтение списков смежности и построение матрицы
for i in range(n):
    data = list(map(int, input().split()))  # Чтение строки списка смежности
    count = data[0]  # Количество рёбер, исходящих от вершины i+1
    for j in range(1, count + 1):
        # Устанавливаем 1 в позиции, соответствующей ребру от вершины i+1 к вершине data[j]
        matrix[i][data[j] - 1] = 1

# Вывод матрицы смежности
for row in matrix:
    print(*row)
